<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
  </head>
    <title>Document</title>
  </head>
  <body>
    <div class="container">
        <h1 class="display-3 text-center my-4">Products List</h1>
        <p><% products[1].ProductID %></p>
        <% if(products.length > 0){ %>

            <!-- table-striped = สลับสี -->
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Image</th>
              <th>ID</th>
              <th>Name</th>
              <th>Category</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Created</th>
              <th>Updated</th>
              <th>Manage</th>
            </tr>
          </thead>
          <tbody>
            <% for(let row=0; row < products.length; row++){ %>
            <tr>
              <td><img src="<%=products[row].ProductPicture%>" width="80" /></td>
              <td><%=products[row].ProductID %></td>
              <td><%=products[row].ProductName %></td>
              <td><%=products[row].CategoryID %></td>
              <td><%=products[row].UnitPrice %></td>
              <td><%=products[row].UnitInStock %></td>
              <td><%=products[row].CreatedDate %></td>
              <td><%=products[row].ModifiedDate %></td>
              <td style="width: 120px;">
                <a class="btn btn-sm btn-warning" href="#">Edit</a>
                <a class="btn btn-sm btn-danger" href="#">Delete</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <% } %>
    </div>
  
  </body>
</html>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>